{
  "compilerOptions": {
    /* ==== Output Directories ==== */
    "rootDir": "./src",
    "outDir": "./dist",

    /* ==== Target Environment ==== */
    "target": "ES2022",
    "module": "ESNext",                     // Updated for modern Node + ESM
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,              // Enable importing JSON files

    /* ==== Type Checking ==== */
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                   // Prevent library type conflicts

    /* ==== Node Support ==== */
    "types": ["node"],

    /* ==== Source Maps (for debugging) ==== */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
