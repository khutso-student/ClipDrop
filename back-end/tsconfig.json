{
  "compilerOptions": {
    /* ==== Output Directories ==== */
    "rootDir": "./src",
    "outDir": "./dist",

    /* ==== Target Environment ==== */
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    /* ==== Type Checking ==== */
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,

    /* ==== Node Support ==== */
    "types": ["node"],

    /* ==== Source Maps (for debugging) ==== */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
